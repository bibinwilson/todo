
      <%= form_tag(controller: "tasks", action: "create_task", method: "post", id: "#{params[:id]}") do %>
        <div class="col s12">
          <div class="row">
            <div class="input-field col s12">
              <textarea name="todo_item" class="materialize-textarea"></textarea>
              <label for="textarea1">Add Task</label>

           </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input name="date" type="date" class="datepicker">
              <label for="textarea1">Due Date</label>                    

           </div>
          </div>
        </div>
        <div class="modal-footer">
      <div class="center-btn">
        <button class="btn waves-effect waves-light red lighten-2" type="submit" name="action">Create
              <i class="material-icons right">send</i>
        </button>  
      </div>  
    </div>
    <% end %>
    